#
# strongSwan IPsec configuration file.
#
# Gateway connection name: <%= @conn_name %>.
#

conn <%= @conn_name %>
    <%- ! if @ike.empty? -%>
    ike=<%= @ike %>
    <% end -%>
    <%- ! if @esp.empty? -%>
    esp=<%= @esp %>
    <% end -%>
    <%- ! if @keyexchange.empty? -%>
    keyexchange=<%= @keyexchange %>
    <% end -%>
    <%- ! if @ikelifetime.empty? -%>
    ikelifetime=<%= @ikelifetime %>
    <% end -%>
    <%- ! if @lifetime.empty? -%>
    lifetime=<%= @lifetime %>
    <% end -%>
    <%- ! if @margintime.empty? -%>
    margintime=<%= @margintime %>
    <% end -%>
    <%- ! if @tfc.empty? -%>
    tfc = <%= @tfc %>
    <% end -%>
    <%- ! if @closeaction.empty? -%>
    closeaction=<%= @closeaction %>
    <% end -%>
    <%- ! if @dpdaction.empty? -%>
    dpdaction=<%= @dpdaction %>
    <% end -%>
    <%- ! if @compress.empty? -%>
    compress=<%= @compress %>
    <% end -%>
    left=<%= @left %>
    leftcert=<%= @leftcert %>
    leftid="<%= @leftid %>"
    leftfirewall=<%= @leftfirewall %>
    leftsubnet=<%= @leftsubnet %>
    right=<%= @right %>
    rightauth=<%= @rightauth %>
    rightsourceip=<%= @rightsourceip %>
    auto=add
