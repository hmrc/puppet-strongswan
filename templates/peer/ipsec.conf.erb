#
# strongSwan IPsec configuration file.
#
# Peer connection name: <%= @conn_name %>.
#

conn <%= @conn_name %>
    <%- if @ike -%>
    ike=<%= @ike %>
    <% end -%>
    <%- if @esp -%>
    esp=<%= @esp %>
    <% end -%>
    <%- if @keyexchange -%>
    keyexchange=<%= @keyexchange %>
    <% end -%>
    <%- if @keyingtries -%>
    keyingtries=<%= @keyingtries %>
    <% end -%>
    <%- if @ikelifetime -%>
    ikelifetime=<%= @ikelifetime %>
    <% end -%>
    <%- if @lifetime -%>
    lifetime=<%= @lifetime %>
    <% end -%>
    <%- if @margintime -%>
    margintime=<%= @margintime %>
    <% end -%>
    <%- if @tfc -%>
    tfc = <%= @tfc %>
    <% end -%>
    <%- if @closeaction -%>
    closeaction=<%= @closeaction %>
    <% end -%>
    <%- if @dpdaction -%>
    dpdaction=<%= @dpdaction %>
    <% end -%>
    <%- if @compress -%>
    compress=<%= @compress %>
    <% end -%>
    left=<%= @left %>
    leftcert=<%= @leftcert %>
    leftid="<%= @leftid %>"
    leftfirewall=<%= @leftfirewall %>
    <%- if @leftsubnet -%>
    leftsubnet=<%= @leftsubnet %>
    <% end -%>
    right=<%= @right %>
    rightauth=<%= @rightauth %>
    rightid="<%= @rightid %>"
    <%- if @rightsubnet -%>
    rightsubnet=<%= @rightsubnet %>
    <% end -%>
    auto=<%= @auto %>
